{{#each posts as |post|}}
<div class="card row">
  <div class="card-header">
    <div>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </div>
    <div>
      Posted by {{post.user.name}} on {{format_date post.date_created}}
    </div>
  </div>
  <div class="card-body">
    <p class="card-text">{{post.content}}</p>
  </div>
</div>
{{/each}}